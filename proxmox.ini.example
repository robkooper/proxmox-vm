# Proxmox Configuration File
# Copy this file to proxmox.ini and fill in your details

[proxmox]
# Proxmox API endpoint (e.g., https://proxmox.example.com:8006)
host = https://your-proxmox-host:8006
# Verify SSL certificate (default: true for security)
# Set to false ONLY for self-signed certificates in lab/development environments
# WARNING: Disabling SSL verification makes you vulnerable to MITM attacks
verify_ssl = true
# API request timeout in seconds (default: 30, increase if you get timeout errors)
timeout = 30

# Authentication Method 1: API Token (recommended)
# Create a token in Proxmox: Datacenter -> Permissions -> API Tokens
# Format: user@realm!tokenid (e.g., root@pam!mytoken)
token_id = 
token_secret = 

# Authentication Method 2: Username and Password
# Leave token_id and token_secret empty to use username/password
# user = root@pam
# password = 

[defaults]
# Default storage for VM disks (e.g., local-lvm, ceph-storage)
storage = local-lvm
# Default network bridge (usually vmbr0)
bridge = vmbr0
# VM ID range - script will find next available ID in this range
vmid_min = 100
vmid_max = 999
# Puppet server hostname/IP (leave empty if not using puppet)
puppet_server = 
# Default CPU type for new VMs (can be overridden with --cpu-type)
# Common values: x86-64-v2-AES, x86-64-v3-AES, host, kvm64, etc.
# Note: Rocky Linux requires 'host' CPU type to avoid boot issues (automatically set if not overridden)
cpu_type = x86-64-v2-AES
# Default number of CPU cores
cores = 2
# Default memory in MB
memory = 2048
# Default disk size in GB
disk_size = 20
# Default username for new VMs (can be overridden with -u/--username)
username = admin
# Default encrypted password for new VMs (SHA-512 format: $6$rounds=4096$salt$hash)
# To encrypt a password, use one of these methods:
#   - Python: python3 -c "from passlib.context import CryptContext; ctx = CryptContext(schemes=['sha512_crypt'], sha512_crypt__rounds=4096); print(ctx.hash('your-password'))"
#   - Linux: mkpasswd --method=SHA-512
#   - macOS: Install whois package (brew install whois) then use: mkpasswd -m sha-512
# Leave empty if you prefer to use SSH keys only or provide password via CLI
password = 
# Default SSH public key file path for new VMs (can be overridden with -k/--keyfile)
# This should be the path to your SSH public key file (e.g., ~/.ssh/id_rsa.pub or ~/.ssh/id_ed25519.pub)
# Tilde (~) expansion is supported, so ~/.ssh/id_rsa.pub will expand to your home directory
# Leave empty if you prefer to provide SSH key via CLI or use password authentication
ssh_key_file = 

[network]
# Network configuration for VMs

# IP address assignment method:
#   "dhcp"   - Use DHCP (default)
#   "netbox" - Allocate IP from NetBox
#   <ip>     - Use specific IP address (e.g., 192.168.1.100)
ipaddress = dhcp

# DNS registration method:
#   "none"   - Don't register DNS (default)
#   "netbox" - Register DNS in NetBox
register = none

# DNS domain name (e.g., example.com)
# Used for creating DNS records and full FQDN
# Required if register = netbox
domain = 

# DNS servers (space-separated list, e.g., 8.8.8.8 8.8.4.4)
# These will be configured in the VM's network settings
# Default: Cloudflare (1.1.1.1) and Google (8.8.8.8)
dns_servers = 1.1.1.1 8.8.8.8 

[netbox]
# NetBox integration (optional)
# Required if ipaddress = netbox or register = netbox
# Leave this section empty or remove it to disable NetBox integration

# NetBox API URL (e.g., https://netbox.example.com)
url = 
# NetBox API token (create one in NetBox: Admin â†’ API Tokens)
token = 

# Subnet/mask in CIDR notation (e.g., 192.168.1.0/24)
# Required if ipaddress = netbox
# The script will find an available IP address from this subnet
subnet = 

# Tenant slug (optional)
# IP addresses will be assigned to this tenant in NetBox
tenant =
